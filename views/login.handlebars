{{! https://mdbootstrap.com/docs/standard/extended/login/#section-login-register }}
<div>

  <h2 class='text-white'>isGame:Two</h2>

  <h5 class='text-white'> isLoggedIn:False </h5>
  {{#if usernameError}}
    <div class='w-25 mx-auto alert alert-warning' role='alert'>
      Incorrect username.
    </div>
  {{/if}}

  {{#if passwordError}}
    <div class='w-25 mx-auto alert alert-warning' role='alert'>
      Incorrect password.
    </div>
  {{/if}}

  <form
    id='login-form'
    class='card-body'
    method='POST'
    action='/api/user/login'
  >
    <div class='form-outline mb-4'>
      <label class='text-white form-label' for='loginName'>username</label>
      <input name='username' type='text' id='loginName' class='form-control' />
    </div>

    <div class='form-outline mb-4'>
      <label
        for='password-input-login'
        class='text-white form-label'
      >password</label>
      <input
        name='password'
        type='password'
        id='loginPassword'
        class='form-control'
      />
    </div>

    <button type='submit' class='btn btn-light'>login</button>
    <a type='button' href='/signup' class='btn btn-dark'>sign up</a>
  </form>
  <form
    id='login-form'
    class='card-body'
    method='POST'
    action='/api/user/guest'
  >
    <button id='guest-login' type='submit' class='mt-2 btn btn-light'>proceed as
      guest</button>
  </form>

</div>